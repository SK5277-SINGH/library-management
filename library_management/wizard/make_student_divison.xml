<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_make_student_division_form" model="ir.ui.view">
            <field name="name">make.student.division.form</field>
            <field name="model">make.student.division</field>
            <field name="arch" type="xml">
                <form string="Student" version="7.0">
                    <field name="is_division" widget="checkbox"/>
                        <label for="is_division" string="Division"/>
                    <field name="is_course" widget="checkbox"/>
                        <label for="is_course" string="Course"/>
                    <group>
                        <field name="course_ids" attrs="{
                                'invisible':['|',('is_division','=',True),('is_division','=',False),
                                ('is_course','=',False)]}"/>

                        <field name="division_ids" attrs="{
                                'invisible':['|',('is_course','=',True),('is_course','=',False),
                                ('is_division','=',False)]}"/>
                    </group>
                    <footer>
                        <span groups="base.group_user">
                            <button string="Yes" type="object"
                                    name="change_division" context="{'my_msg':'You clicked on yes button..'}" class="oe_highlight"/>
                                or
                            <button special="cancel"  string="No" type="object"/>
                        </span>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_set_student_divison_view" 
            multi="True"
            name="Change Division/Course" 
            res_model="make.student.division" 
            src_model="res.partner"
            view_mode="form" 
            target="new" 
            view_type="form"/>
    </data>
</odoo>