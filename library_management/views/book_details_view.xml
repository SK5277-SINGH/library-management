<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_book_details" model="ir.ui.view">
			<field name="name">view.book.details</field>
			<field name="model">book.details</field>
			<field name="arch" type="xml">
				<form string="Add Book">
					<sheet>
						<group>
							<group>
								<field name="book_id"/>
								<field name="isbn"/>
								<field name="title"/>
								<field name="description"/>
								<field name="language"/>
								<field name="category"/>
							</group>

							<group>
								<field name="author"/>
								<field name="publisher"/>
								<field name="price"/>
								<field name="copies"/>
								<field name="date"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_book_details" model="ir.ui.view">
			<field name="name">tree.book.details</field>
			<field name="model">book.details</field>
			<field name="arch" type="xml">
				<tree string="Add New Book">
					<field name="title"/>
					<field name="language"/>
					<field name="author"/>
					<field name="publisher"/>
					<field name="price"/>
					<field name="copies"/>
				</tree>
			</field>
		</record>

		<record id="action_book" model="ir.actions.act_window">
			<field name="name">Library</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">book.details</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>


		<menuitem id="menu_book" name="Library" sequence="1"/>
		<menuitem id="menu_book_menu" name="Book" sequence="1" parent="menu_book"/>
		<menuitem id="menu_book_view" name="Book Details" sequence="1" action="action_book" parent="menu_book_menu"/>
	</data>
</odoo>
