<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_student" model="ir.ui.view">
			<field name="name">view.student</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				
					<xpath expr="//field[@name='company_type']" position="replace">
						<div>
							<field name="is_status"  widget="radio" options="{'horizontal': true}" required='1' groups='library_management.library_group_librarian' />
						</div>
					</xpath>

<!-- mobile replace -->
					<xpath expr="//field[@name='mobile']" position="replace">
						<field name="mobile" widget='mobile' required='1'/>
					</xpath>

<!--Student start -->
					<xpath expr="//page[@name='sales_purchases']" position="after">
						<page string="Student" name='student' attrs="{
							'invisible':['|',('is_status','=','librarian'),'|',('is_status','=','author'),'|',('is_status','=','publisher')]
							}">
							<group>
								<field name="rno" attrs="{
										'required':[('is_status','=','stud')]
									}"/>

								<field name="division" attrs="{
										'required':[('is_status','=','stud')]
									}"/>
								<field name="gender" attrs="{
										'required':[('is_status','=','stud')]
									}"/>
								<field name="date" attrs="{
										'required':[('is_status','=','stud')]
									}"/>
							</group>
						</page>
					</xpath>	
<!--Student stop-->
				</field>
		</record>
	</data>
</odoo>
