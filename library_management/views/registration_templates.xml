<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Email template -->
        <record id="registration" model="mail.template">
            <field name="name">Registration - Send by Email</field>
            <field name="email_from">${(user.email or '')|safe}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Congrats ${object.name}</field>
            <field name="model_id" ref="library_management.model_res_partner"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
            <ul class="o_mail_thread_message_tracking">
                <h1>Welcome to library</h1>
                <li>
                    Name: <span>${object.name}</span>
                </li>
                <li>
                    Role: <span>${object.is_status}</span>
                </li>

                <p>Now you can member of library management system</p>
       		</ul>
            ]]></field>
        </record>
    </data>
</odoo>